<h1>Разделы</h1>

<table class="table table-striped">
  <tr>
    <th>Название</th>
    <th>Описание</th>
    <th></th>
    <th></th>
  </tr>

<% @categories.each do |category| %>
  <tr>
    <td><%= category.name %></td>
    <td><%= category.description %></td>
    <td><%= link_to "Редактировать", edit_category_path(category), :class => "btn btn-warning" %></td>
    <td><%= link_to "Удалить", category, method: :delete, data: { confirm: 'Are you sure?' }, :class => "btn btn-inverse" %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to "Новый раздел", new_category_path, :class => "btn btn-success" %>
